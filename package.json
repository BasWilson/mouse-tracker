{
  "name": "mouse-tracker",
  "productName": "Mouse tracker",
  "version": "1.0.0",
  "description": "This is a very basic application that will record the region around your mouse.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Bas Wilson",
  "license": "MIT",
  "build": {
    "appId": "com.baswilson.mousetracker",
    "productName": "Mouse tracker",
    "copyright": "Copyright Â© 2020 Bas Wilson",
    "directories": {
      "output": "./build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico",
      "publisherName": "Bas Wilson"
    },
    "nsis": {
      "installerIcon": "src/assets/icon.ico",
      "uninstallerIcon": "src/assets/icon.ico",
      "uninstallDisplayName": "Mouse tracker",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "tron_forge"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "config": "^3.3.2",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "devtron": "^1.4.0",
    "electron": "18.3.7",
    "electron-builder": "^22.8.1"
  }
}
